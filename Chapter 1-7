print("\nExercise 4\n")

#list of sandwiches
sandwhiches = ['BLT', 'Egg', 'Club']
#List without content for completed sandwhiches
completed_sandwhiches = []

#While loop to remain until conditions have been met or broken
while sandwhiches:
    
    #making a new variable to store the items removed from the list
    present_sandwhich = sandwhiches.pop()
    print(f"I am working on your {present_sandwhich} sandwhich.")
    completed_sandwhiches.append(present_sandwhich)

print("\nExercise 5\n")

#Printing the end product of the loop
for sandwhich in completed_sandwhiches:
    print(f"I am going to consume a {sandwhich} sandwhich")

completed_sandwiches = []

print("The current sandwich orders are: " + str(sandwich_orders))

print("Sorry, the deli has run out of pastrami.")

while 'pastrami' in sandwich_orders:
    sandwich_orders.remove('pastrami')

for sandwich in sandwich_orders:
    print("I have finished making your "+ sandwich+" sandwich.")
    completed_sandwiches.append(sandwich)

print("\nThe following sandwiches have been made:")
for sandwich in completed_sandwiches:
    print(sandwich)

